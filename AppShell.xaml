<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AlexandreApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AlexandreApp.Views"
    FlyoutBehavior="Disabled"
    Title="AlexandreApp">
    
    <FlyoutItem Title="BottomBar" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate views:MainPage}" Icon="home_icon.svg"/>
        <ShellContent Title="Search" ContentTemplate="{DataTemplate views:MainPage}" Icon="search_icon.svg"/> 
        <ShellContent Title="Favorite" ContentTemplate="{DataTemplate views:MainPage}" Icon="favorite_icon.svg"/>
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate views:MainPage}" Icon="settings_icon.svg"/>
    </FlyoutItem>
    
</Shell>
