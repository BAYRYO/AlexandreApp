<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AlexandreApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AlexandreApp.Views"
    FlyoutBehavior="Disabled"
    Title="AlexandreApp">

    <TabBar Title="BottomBar" FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Home" Icon="home_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}"/>
        </Tab>
        <Tab Title="Search" Icon="search_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate views:SearchPage}"/>
        </Tab>
        <Tab Title="Favorite" Icon="favorite_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate views:FavoritePage}"/>
        </Tab>
        <Tab Title="Settings" Icon="settings_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}"/>
        </Tab>
    </TabBar>
    

</Shell>
