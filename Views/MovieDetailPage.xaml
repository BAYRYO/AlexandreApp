<!-- MovieDetailPage.xaml -->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlexandreApp.Views.MovieDetailPage">
        <StackLayout Padding="20">
            <Image x:Name="MovieImage" HeightRequest="200" WidthRequest="200" />
            <Label x:Name="MovieTitle" FontSize="24" FontAttributes="Bold" Margin="0,20,0,10" />
            <Label x:Name="MovieDescription" FontSize="18" Margin="0,0,0,20"/>
            <Button x:Name="MovieFavoriteButton" Clicked="OnFavoriteClicked" Margin="0,0,0,10"/>
            <Button Text="Supprimer le film" Clicked="OnDeleteClicked" Margin="0,0,0,10"/>
            <Button Text="Fermer les détails du film" Clicked="Button_OnClicked"/>
        </StackLayout>
</ContentPage>